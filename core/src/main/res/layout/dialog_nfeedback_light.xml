<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_ask_for_feedback_header_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Want to send feedback?"
        android:textSize="20dp"
        android:typeface="normal" />

    <CheckBox
        android:id="@+id/dialog_ask_for_feedback_never_again_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Never show again"
        android:typeface="normal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp" >

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_ask_for_feedback_no_btn"
            android:layout_width="0px"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="No"
            android:typeface="normal" />

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent" >

        </FrameLayout>

        <Button
            android:id="@+id/dialog_ask_for_feedback_yes_btn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Yes"
            android:typeface="normal" />

    </LinearLayout>

</LinearLayout>